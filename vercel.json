{
    "version": 2,
    "builds": [
        {
            "src": "apps/server/src/main.ts",
            "use": "@vercel/node"
        },
        {"src": "dist/apps/hakyolms/.next",
            "use": "@vercel/next"

        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "apps/server/src/main.ts",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ]
        },
        {
             "src": "/(.*)",
            "dest": "dist/apps/hakyolms/.next"
        }
    ]
}